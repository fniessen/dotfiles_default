#!/usr/bin/env bash

# Find broken symbolic links.
broken_symlinks=$(find . -type l -exec test ! -e {} \; -print)

if [ -z "$broken_symlinks" ]; then
    echo "No broken symbolic links found."
    exit 0
fi

# Prompt for confirmation.
echo "The following broken symbolic links will be removed:"
echo "$broken_symlinks"
read -p "Are you sure you want to remove them? (y/n) " -n 1 -r
echo
if [[ ! $REPLY =~ ^[Yy]$ ]]; then
    echo "Cancelled operation."
    exit 2
fi

# Remove broken symbolic links.
while read -r link; do
    rm -v "$link"
done <<< "$broken_symlinks"

echo "Broken symbolic links removed successfully."
exit 0
