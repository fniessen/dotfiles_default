// --[ HTML / XHTML ]---------------------------------------------------------

bare: yes
clean: yes
doctype: auto
drop-empty-paras: yes
output-xhtml: yes

//{{{ For PFlow
  new-blocklevel-tags: index, iterate, pflowtableau, pflowtableaudataentry
  new-empty-tags: pflowtableaunewbutton
  new-inline-tags: includegroupitem, pflowfield
//}}}

// --[ Pretty Printing ]------------------------------------------------------

indent: auto
  //! indent element content
indent-spaces: 2
wrap: 80

// --[ Encoding ]-------------------------------------------------------------

char-encoding: utf8

// --[ Miscellaneous ]--------------------------------------------------------

show-warnings: yes
force-output: yes
gnu-emacs: yes
tidy-mark: yes

// This is for the sake of Emacs.
// Local Variables:
// mode: c
// End:

/// .tidyrc ends here
