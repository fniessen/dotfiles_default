# See `man mintty'.

# Looks.
ForegroundColour=168,168,168
BackgroundColour=0,24,40
CursorColour=0,255,0
SearchForegroundColour=white
SearchBackgroundColour=bright yellow
SearchCurrentColour=blue
Transparency=off
OpaqueWhenFocused=yes
CursorType=underscore
# HighlightForegroundColour=
# HighlightBackgroundColour=

# Text.
Font=Powerline Consolas
FontHeight=9
BoldAsFont=yes
BoldAsColour=yes
AllowBlinking=yes
Locale=C
Charset=UTF-8

# Keys.
SwitchShortcuts=no

# Mouse.
RightClickAction=paste

# Window.
Columns=132
Rows=55
ScrollbackLines=100000

# Terminal.
Term=xterm-256color
BellSound=yes
BellFlash=yes
